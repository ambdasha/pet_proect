{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build-server",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                "src/main.cpp",
                "-o",
                "bin/my_server.exe",
                "-I", "C:/Program Files/MySQL/MySQL Server 8.0/include",
                "-I", "../lib",
                "C:/Program Files/MySQL/MySQL Server 8.0/lib/libmysql.lib",
                "-lws2_32",
                "-lssl",
                "-lcrypto",
                "-ladvapi32",
                "-static",
                "-std=c++11"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"],
            "detail": "Компиляция с MySQL из vcpkg"
        },
        {
            "label": "run-server", 
            "type": "shell",
            "command": "./bin/my_server.exe",
            "group": "build",
            "dependsOn": ["build-server"],
            "problemMatcher": [],
            "detail": "Запуск сервера"
        }
    ]
}